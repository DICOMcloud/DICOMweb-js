

<div class="panel-group">
    <div class="panel panel-default study-view clearfix">
        <div class="panel-heading studies-title clearfix">
            <a data-toggle="collapse" href="#studyCollapse">
                
                <h3 class="panel-title">
                    <span>Studies</span>
                    <span class="study-overview"></span>
                    <span class="badge pull-right" data-pacs-study-count>0</span>
                </h3>
            </a>
        </div>

        <div id="studyCollapse" class="panel-collapse collapse in">
            <div class="panel-body studies-query"></div>
        </div>
    </div>

    <div class="panel panel-default series-view clearfix">
        <div class="panel-heading series-title clearfix">
            <a data-toggle="collapse" href="#seriesCollapse">
                <h3 class="panel-title">
                    Series
                    <span class="badge pull-right" data-pacs-series-count>0</span>
                </h3>
            </a>
        </div>
        <div id="seriesCollapse" class="panel-collapse collapse in">
            <div class="panel-body series-query"></div>
        </div>
    </div>
    
    <div class="panel panel-default instance-view clearfix">
        <div class="panel-heading instance-title clearfix">
            <a data-toggle="collapse" href="#instanceCollapse">
                <h3 class="panel-title">
                    Instances
                    <span class="badge pull-right" data-pacs-instance-count>0</span>
                </h3>
            </a>
        </div>

        <div id="instanceCollapse" class="panel-collapse collapse in">
            <div class="panel-body instance-query">
            </div>
        </div>
    </div>

    <div class="panel panel-default instance-details clearfix">
        <div class="panel-heading instance-title clearfix">
            <h3 class="panel-title">Instance Details</h3>
            <div>
                @Html.Partial("_ItemDetailsToolbar")
            </div>
        </div>

        <div class="panel-body instance-metadata" style="display:none">
            <div class="pacs-metadata-viewer"></div>
        </div>
        <div class="panel-footer">
            <div class="alert alert-danger">*DICOM instance will be downloaded as complete multipart response including Boundary and content type</div>
            <p class="info text-info">Need to use a multipart parser, possibly <a href="https://github.com/anentropic/stream" target="_blank">https://github.com/anentropic/stream</a></p>
        </div>
    </div>
</div>